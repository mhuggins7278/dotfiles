{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "mcp": {
    "whoIs": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@glg/mcp-whois"
      ],
      "enabled": true
    },
    "gdsData": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@glg/mcp-gds"
      ],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": true
    },
    "zenhub": {
      "type": "remote",
      "url": " https://api.zenhub.com/mcp",
      "headers": {
        "Authorization": "{env:ZH_API_KEY}",
        "X-zh-workspace": "{env:CSX_ZH_WORKSPACE_ID}"
      }
    },
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp"
    }
  }
}
