{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      "model": "github-copilot/claude-opus-4.6",
      "reasoningEffort": "high"
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.6",
      "reasoningEffort": "high"
    }
  },
  "permission": {
    "external_directory": {
      "~/github/glg/epiquery-templates/**": "allow",
      "~/github/mhuggins7278/notes/**": "allow"
    },
    "skill": {
      "*": "allow",
      "obsidian-markdown": "deny"
    }
  },
  "mcp": {
    "whoIs": {
      "type": "local",
      "command": ["npx", "-y", "@glg/mcp-whois"],
      "enabled": true
    },
    "gdsData": {
      "type": "local",
      "command": ["npx", "-y", "@glg/mcp-gds"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": true
    },
    "figma": {
      "type": "remote",
      "url": "http://127.0.0.1:3845/mcp",
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  },
  "tools": {
    "figma*": false,
    "gdsData_*": false,
    "whoIs_*": false,
    "playwright_*": false,
    "context7_*": false
  }
}
